    {
      "id": "cisa-kev",
      "name": "CISA Known Exploited Vulnerabilities",
      "category": "VULNERABILITY",
      "icon": "\ud83c\udfdb\ufe0f",
      "color": "#d9534f",
      "type": "json_static",
      "url": "https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json",
      "method": "GET",
      "response_path": "vulnerabilities",
      "field_mapping": {
        "title": "{vendorProject} {product}: {vulnerabilityName}",
        "link": "https://nvd.nist.gov/vuln/detail/{cveID}",
        "summary": "{shortDescription} Required action: {requiredAction} Due: {dueDate}. Ransomware use: {knownRansomwareCampaignUse}",
        "published": "dateAdded",
        "source": "CISA KEV",
        "id_field": "cveID"
      },
      "max_items": 20,
      "priority": 1,
      "scope": "tactical",
      "audience": "technical",
      "enabled": true
    },
    {
      "id": "abusech-urlhaus",
      "name": "abuse.ch URLhaus - Malicious URLs",
      "category": "MALWARE",
      "icon": "\ud83d\udd17",
      "color": "#f0ad4e",
      "type": "json_api",
      "url": "https://urlhaus-api.abuse.ch/v1/urls/recent/",
      "method": "GET",
      "auth_key_ref": "abusech",
      "response_path": "urls",
      "field_mapping": {
        "title": "Malicious URL: {host} ({threat})",
        "link": "{urlhaus_reference}",
        "summary": "URL: {url} | Status: {url_status} | Threat: {threat} | Tags: {tags} | Reporter: {reporter}",
        "published": "date_added",
        "source": "abuse.ch URLhaus",
        "id_field": "id"
      },
      "max_items": 15,
      "priority": 1,
      "scope": "tactical",
      "audience": "technical",
      "enabled": true
    },
