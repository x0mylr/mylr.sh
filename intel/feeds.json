      "id": "abusech-threatfox",
      "name": "abuse.ch ThreatFox - IOC Feed",
      "category": "MALWARE",
      "icon": "\ud83e\udd8a",
      "color": "#f0ad4e",
      "type": "json_api",
      "url": "https://threatfox-api.abuse.ch/api/v1/",
      "method": "POST",
      "post_body": {"query": "get_iocs", "days": 7},
      "auth_key_ref": "abusech",
      "response_path": "data",
      "field_mapping": {
        "title": "{malware_printable}: {ioc_type_desc} IOC detected",
        "link": "https://threatfox.abuse.ch/ioc/{id}/",
        "summary": "IOC: {ioc} | Type: {threat_type_desc} | Malware: {malware_printable} ({malware_alias}) | Confidence: {confidence_level}% | Tags: {tags}",
        "published": "first_seen",
        "source": "abuse.ch ThreatFox",
        "id_field": "id"
      },
      "max_items": 15,
      "priority": 1,
      "scope": "tactical",
      "audience": "technical",
      "enabled": true
